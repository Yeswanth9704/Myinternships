#time conversion
    elif choice_1 == 3:
        def time_conversion():
            print("what do you want to convert")
        print("1.minutes into seconds")
        print("2.hours into minutes")
        print("3.seconds into minutes")
        print("4.days into hours")
        print("5.hours into days")
        print("6.weeks into days")
        choice_4 =int(input("enter your choice 1-6:"))
        if choice_4 == 1:
            mins = float(input("enter the time in minutes"))
            sec = mins*60
            print("{} minutes equals to {} seconds".format(mins, sec))
        elif choice_4 == 2:
            hour = float(input("enter the time in hours"))
            mins = hour*60
            print("{} hours equals to {} minutes".format(hour, mins))
        elif choice_4 == 3:
            sec = float(input("enter the time in seconds:"))
            mins = round(sec*0.0167)
            print("{} seconds equals to {} minutes".format(sec, mins))
        elif choice_4 == 4:
            day = float(input("enter the time in days:"))
            hour = day*24
            print("{} days equals to {} hours".format(day, hour))
        elif choice_4 == 5:
            hour = float(input("enter the time in hours:"))
            days = round(hour*0.04167)
            print("{} hours equals to approx {} days".format(hour, days))
        elif choice_4 == 6:
            week = float(input("enter the time in weeks:"))
            day = week*7
            print("{} weeks equals to {} days".format(week, day))
        else :
            print("invalid option!, please enter the value between 1-6")
            time_conversion()
        print("did you want to continue")
        print("yes or no")
