def unit_converter():
    print("welcome to unit converter")
    print("what do you want to convert")
    print("1.length")
    print("2.volume")
    print("3.time")
    print("4.weight")
    choice_1 = int(input("enter your choice 1-4:"))
#length conversion
    if choice_1 == 1:
        def length_converter():
            print("what do you want to convert into")
        print("1.kilometers into miles")
        print("2.miles into kilometers")
        print("3.centimeters into inches")
        print("4.inches into centimeters")
        print("5.meters into yards")
        print("6.yards into meters")
        print("7.meters into feet")
        print("8.feets into meters")
        choice_2 = int(input("enter your choice 1-8:"))
        if choice_2 == 1:
            km = float(input("enter length in kilometers:"))
            miles = km * 0.621371
            print("{} kilometer(s) is equal to {} miles".format(km, miles))
        elif choice_2 == 2:
            miles = float(input("enter length in miles:"))
            km = miles * 1.609
            print("{} equals to {} kilometers".format(miles, km))               
        elif choice_2 == 3:
            cm = float(input("enter the length in centimeters:"))
            inch = cm *0.394
            print("{} centimeters is equals to {} inches".format(cm, inch))
        elif choice_2 == 4:
            inch = float(input("enter the length in inches:"))
            cm = inch*2.540
            print("{} inches are equal to {} centimeters".format(inch, cm))
        elif choice_2 == 5:
            meter = float(input("enter the length in meters:"))
            yard = meter *1.094
            print("{} meters are equals to {} yards".format(meter, yard))
        elif choice_2 == 6:
            yard = float(input("enter the length in yards:"))
            meter = yard*0.914
            print("{} yards equals to {} meters".format(yard, meter))
        elif choice_2 == 7:
            meter = float(input("enter the length in neter:"))
            feet = meter*3.281
            print('{} meters are equals to {} feet'.format(meter, feet))
        elif choice_2 == 8:
            feet = float(input("enter the length in feets:"))
            meter = feet*0.305
            print("{} feet are equals to {} meters".format(feet, meter))
        else:
            print("invalid option, please select the option between 1 to 8")
            length_converter()
        print("did you want to continue")
        print("yes or no")
        option_1 =input("whats your answer:")
        if option_1.lower() == 'yes':
            length_converter()
        elif option_1.lower() == 'no':
            unit_converter()
        else:
            print("invalid option")
