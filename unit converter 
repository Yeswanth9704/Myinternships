        elif choice_5 == 2:
            gram = float(input("enter the weight in grams:"))
            kg = gram*0.001
            print("{} grams equals to {} kilograms".format(gram, kg))
        elif choice_5 == 3:
            kg = float(input("enter the weight in kilograms:"))
            pound = kg*2.205
            print("{} kilograms equals to {} pounds".format(kg, pound))
